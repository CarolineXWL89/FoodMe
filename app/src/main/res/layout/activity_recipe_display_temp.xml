<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.caroline.foodme.RecipeDisplay.RecipeDisplayTemp">

    <ImageView
        android:id="@+id/image_image"
        android:layout_width="75dp"
        android:layout_height="79dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/background_image"
        app:layout_constraintEnd_toStartOf="@+id/name_textview"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/background_image"
        app:layout_constraintVertical_bias="0.517"
        app:srcCompat="@mipmap/ic_launcher_round" />

    <ImageView
        android:id="@+id/background_image"
        android:layout_width="384dp"
        android:layout_height="168dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toTopOf="@+id/scrollView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@mipmap/ic_launcher" />

    <Button
        android:id="@+id/button_a"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginBottom="8dp"

        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="A"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toTopOf="@+id/servings_textView"
        app:layout_constraintEnd_toStartOf="@+id/button_b"
        app:layout_constraintStart_toEndOf="@+id/creator__textView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.962" />

    <View
        android:layout_width="1dp"
        android:layout_height="2dp"
        android:background="#f0f0f0" />

    <Button
        android:id="@+id/button_b"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginBottom="43dp"
        android:layout_marginEnd="2dp"
        android:layout_marginTop="10dp"
        android:text="B"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toTopOf="@+id/scrollView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button_a"
        app:layout_constraintTop_toBottomOf="@+id/background_image"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/name_textview"
        android:layout_width="209dp"
        android:layout_height="34dp"
        android:layout_marginEnd="6dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="4dp"
        android:text="Name"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/creator__textView"
        app:layout_constraintEnd_toStartOf="@+id/button_a"
        app:layout_constraintStart_toEndOf="@+id/image_image"
        app:layout_constraintTop_toBottomOf="@+id/background_image" />

    <TextView
        android:id="@+id/creator__textView"
        android:layout_width="119dp"
        android:layout_height="23dp"
        android:layout_marginBottom="4dp"
        android:layout_marginEnd="23dp"
        android:layout_marginStart="74dp"
        android:text="Creator"
        app:layout_constraintBottom_toTopOf="@+id/time_textView"
        app:layout_constraintEnd_toStartOf="@+id/button_a"
        app:layout_constraintStart_toEndOf="@+id/speaker_button"
        app:layout_constraintTop_toBottomOf="@+id/name_textview" />

    <TextView
        android:id="@+id/time_textView"
        android:layout_width="102dp"
        android:layout_height="24dp"
        android:layout_marginBottom="4dp"
        android:layout_marginEnd="17dp"
        android:layout_marginStart="27dp"
        android:layout_marginTop="4dp"
        android:text="Time"
        app:layout_constraintBottom_toTopOf="@+id/scrollView2"
        app:layout_constraintEnd_toStartOf="@+id/servings_textView"
        app:layout_constraintStart_toEndOf="@+id/speaker_button"
        app:layout_constraintTop_toBottomOf="@+id/creator__textView" />

    <TextView
        android:id="@+id/servings_textView"
        android:layout_width="112dp"
        android:layout_height="23dp"
        android:layout_marginBottom="9dp"
        android:layout_marginEnd="54dp"
        android:layout_marginStart="17dp"
        android:layout_marginTop="4dp"
        android:text="Servings"
        app:layout_constraintBottom_toTopOf="@+id/scrollView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/time_textView"
        app:layout_constraintTop_toBottomOf="@+id/creator__textView" />

    <ImageButton
        android:id="@+id/speaker_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:layout_marginEnd="19dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        app:layout_constraintBottom_toTopOf="@+id/scrollView2"
        app:layout_constraintEnd_toStartOf="@+id/time_textView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_image"
        app:srcCompat="@android:drawable/ic_lock_silent_mode_off" />

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="298dp"
        android:layout_marginTop="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/speaker_button">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/recipe_textView"
                android:layout_width="match_parent"
                android:layout_height="325dp"
                android:layout_marginTop="4dp"
                android:text="Recipe"
                app:layout_constraintTop_toBottomOf="@+id/creator__textView"
                tools:layout_editor_absoluteX="6dp" />
        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>
